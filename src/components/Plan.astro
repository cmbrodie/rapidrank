<style>
	.step-animate {
		transition: transform 0.3s ease !important;
		will-change: transform;
	}
</style>
<script>
	document.addEventListener('DOMContentLoaded', () => {
		const planSection = document.querySelector('.plan-section')
		const steps = planSection.querySelectorAll('.group')

		window.addEventListener(
			'scroll',
			() => {
				steps.forEach((step) => {
					const rect = step.getBoundingClientRect()
					const viewHeight = window.innerHeight
					const inView = rect.top <= viewHeight * 0.75 && rect.bottom >= viewHeight * 0.25

					if (inView) {
						// Apply all hover state changes
						step.style.transform = 'translateY(-4px)'
						// Change icon background and text color
						const iconContainer = step.querySelector('.bg-indigo-100')
						if (iconContainer) {
							iconContainer.classList.remove('bg-indigo-100', 'text-indigo-600')
							iconContainer.classList.add('bg-indigo-600', 'text-white')
						}
						// Increase shadow
						const contentContainer = step.querySelector('.shadow-md')
						if (contentContainer) {
							contentContainer.classList.remove('shadow-md')
							contentContainer.classList.add('shadow-lg')
						}
						// Change number badge color
						const numberBadge = step.querySelector('.bg-gray-700')
						if (numberBadge) {
							numberBadge.classList.remove('bg-gray-700')
							numberBadge.classList.add('bg-gray-400')
						}
					} else {
						// Remove all hover state changes
						step.style.transform = 'translateY(0)'
						// Revert icon colors
						const iconContainer = step.querySelector('.bg-indigo-600')
						if (iconContainer) {
							iconContainer.classList.remove('bg-indigo-600', 'text-white')
							iconContainer.classList.add('bg-indigo-100', 'text-indigo-600')
						}
						// Revert shadow
						const contentContainer = step.querySelector('.shadow-lg')
						if (contentContainer) {
							contentContainer.classList.remove('shadow-lg')
							contentContainer.classList.add('shadow-md')
						}
						// Revert number badge
						const numberBadge = step.querySelector('.bg-gray-400')
						if (numberBadge) {
							numberBadge.classList.remove('bg-gray-400')
							numberBadge.classList.add('bg-gray-700')
						}
					}
				})
			},
			{ passive: true }
		)

		// Add transition styles for all changing properties
		steps.forEach((step) => {
			step.style.transition = 'all 0.3s ease'
			const elements = step.querySelectorAll('.bg-indigo-100, .shadow-md, .bg-gray-700')
			elements.forEach((el) => {
				el.style.transition = 'all 0.3s ease'
			})
		})
	})
</script>
