---
import Image from 'astro/components/Image.astro'
import rrHero from '../images/rr-hero.webp'
import Picture from 'astro/components/Picture.astro'
---

<section class="relative overflow-hidden bg-gradient-to-b from-gray-50 via-white to-gray-50">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="grid gap-8 py-12 md:grid-cols-2 md:gap-16 md:py-40">
			<!-- Left Column - Content -->
			<div class="flex flex-col justify-center space-y-8 md:space-y-12">
				<div class="space-y-4 md:space-y-6">
					<h1
						class="text-3xl font-extrabold uppercase tracking-tight text-gray-900 sm:text-4xl md:text-5xl lg:text-7xl"
					>
						Websites that grow your business on autopilot
					</h1>
					<p class="text-base font-medium text-gray-500 sm:text-lg md:text-xl/8">
						Get found on Google and attract new leads, so you never have to make a cold call again.
					</p>
				</div>

				<!-- Single CTA Button -->
				<div>
					<button
						class="w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:w-auto"
					>
						Free Growth Plan
					</button>
					<p class="mt-2 text-sm text-gray-600">15-min strategy call</p>
				</div>

				<!-- Trust Indicators - Enhanced spacing and typography -->
				<div class="flex flex-col gap-4 sm:flex-row sm:gap-8 xl:gap-10">
					<div class="flex items-center gap-3">
						<svg class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
							<path
								fill-rule="evenodd"
								d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="text-sm font-semibold">Rank on Google</span>
					</div>
					<div class="flex items-center gap-3">
						<svg class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
							<path
								fill-rule="evenodd"
								d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="text-sm font-semibold">Get More Leads</span>
					</div>
					<div class="flex items-center gap-3">
						<svg class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
							<path
								fill-rule="evenodd"
								d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="text-sm font-semibold">Close More Sales</span>
					</div>
				</div>
			</div>

			<!-- Right Column - Image -->
			<div class="relative mt-8 flex items-center md:mt-0">
				<img
					src={rrHero.src}
					alt="Team collaborating on business growth strategy"
					class="w-full rounded-xl shadow-xl"
					width="800"
					height="600"
				/>
			</div>
		</div>
	</div>
	<!-- Background gradient -->
	<div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-gradient-to-t from-white sm:h-32"></div>
</section>
