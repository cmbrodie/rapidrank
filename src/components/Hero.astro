---
import rrHero from '../images/rr-hero.webp'
---

<section class="relative overflow-hidden bg-gradient-to-b from-gray-50 to-white">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="grid gap-12 py-16 md:grid-cols-2 md:gap-16 md:py-24">
			<!-- Left Column - Content -->
			<div class="flex flex-col justify-center space-y-8">
				<div class="space-y-4">
					<h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
						Websites that grow your business on autopilot
					</h1>
					<p class="text-xl text-gray-600">
						Get found on Google and attract new leads, so you never have to make a cold call again.
					</p>
				</div>

				<!-- Single CTA Button -->
				<div>
					<button
						class="rounded-lg bg-gradient-to-r from-indigo-500 to-indigo-400 px-6 py-3 font-semibold text-white transition-all duration-200 hover:from-indigo-600 hover:to-indigo-500 hover:shadow-lg"
					>
						Free Growth Plan
					</button>
				</div>

				<!-- Trust Indicators - Simple flex with better spacing -->
				<div class="flex flex-wrap items-start gap-6 xl:gap-12">
					<div class="flex items-center gap-2">
						<svg class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
							<path
								fill-rule="evenodd"
								d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="font-medium">Rank on Google</span>
					</div>
					<div class="flex items-center gap-2">
						<svg class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
							<path
								fill-rule="evenodd"
								d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="font-medium">Get More Leads</span>
					</div>
					<div class="flex items-center gap-2">
						<svg class="h-5 w-5 text-indigo-500" viewBox="0 0 20 20" fill="currentColor">
							<path
								fill-rule="evenodd"
								d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
								clip-rule="evenodd"></path>
						</svg>
						<span class="font-medium">Close More Sales</span>
					</div>
				</div>
			</div>

			<!-- Right Column - Image -->
			<div class="relative flex items-center">
				<img
					src={rrHero.src}
					alt="Team collaborating on business growth strategy"
					class="rounded-lg shadow-lg"
					width="800"
					height="600"
				/>
			</div>
		</div>
	</div>
</section>
