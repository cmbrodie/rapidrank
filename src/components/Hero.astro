---
import Image from 'astro/components/Image.astro'
import rrHero from '../images/rr-hero.webp'
import Picture from 'astro/components/Picture.astro'
---

<section class="relative overflow-hidden bg-gradient-to-b from-gray-50 via-white to-gray-50">
	<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="grid gap-8 py-6 sm:py-12 md:grid-cols-2 md:gap-16 md:py-28 lg:py-40">
			<!-- Left Column - Content -->
			<div class="flex flex-col justify-center space-y-8 md:space-y-12">
				<div class="space-y-4 md:space-y-6">
					<h1
						class="text-4xl font-extrabold uppercase tracking-tight text-gray-900 md:text-5xl lg:text-7xl"
					>
						Websites that grow your business on autopilot
					</h1>
					<p class="text-base font-medium text-gray-500 sm:text-lg md:text-xl/8">
						Get found on Google and attract new leads, so you never have to make a cold call again.
					</p>
				</div>

				<!-- Single CTA Button -->
				<div>
					<button
						class="w-full rounded-md bg-indigo-600 px-3.5 py-2.5 text-base font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:w-auto"
					>
						Free Growth Plan
					</button>
					<!-- <button
						class="w-full rounded-md bg-gradient-to-b from-orange-300 via-orange-200 to-orange-300 px-3.5 py-2.5 text-sm font-semibold text-black shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:w-auto"
					>
						Free Growth Plan
					</button> -->
					<p class="mt-1 pl-1 text-sm text-gray-600">15-min strategy call</p>
				</div>

				<!-- Trust Indicators - Fixed layout no bunching -->
				<div class="flex flex-col gap-4 sm:flex-row sm:gap-12 sm:whitespace-nowrap">
					<div class="flex items-center gap-3">
						<div
							class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-indigo-600 text-white"
						>
							<svg
								class="h-3 w-3"
								viewBox="0 0 12 12"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M10 3L4.5 8.5L2 6"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
							</svg>
						</div>
						<span class="text-base font-medium">Rank on Google</span>
					</div>
					<div class="flex items-center gap-3">
						<div
							class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-indigo-600 text-white"
						>
							<svg
								class="h-3 w-3"
								viewBox="0 0 12 12"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M10 3L4.5 8.5L2 6"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
							</svg>
						</div>
						<span class="text-base font-medium">Get More Leads</span>
					</div>
					<div class="flex items-center gap-3">
						<div
							class="flex h-5 w-5 shrink-0 items-center justify-center rounded-full bg-indigo-600 text-white"
						>
							<svg
								class="h-3 w-3"
								viewBox="0 0 12 12"
								fill="none"
								xmlns="http://www.w3.org/2000/svg"
							>
								<path
									d="M10 3L4.5 8.5L2 6"
									stroke="currentColor"
									stroke-width="2"
									stroke-linecap="round"
									stroke-linejoin="round"></path>
							</svg>
						</div>
						<span class="text-base font-medium">Close More Sales</span>
					</div>
				</div>
			</div>

			<!-- Right Column - Image -->
			<div class="relative mt-8 flex items-center md:mt-0">
				<img
					src={rrHero.src}
					alt="Team collaborating on business growth strategy"
					class="w-full rounded-xl shadow-xl"
					width="800"
					height="600"
				/>
			</div>
		</div>
	</div>
	<!-- Background gradient -->
	<div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-gradient-to-t from-white sm:h-32"></div>
</section>
